#include <tunables/global>

/usr/bin/qbittorrent {
  # Kör binären
  /usr/bin/qbittorrent rix,

  # Nätverk (torrentprotokollet använder både TCP och UDP):
  network inet stream,
  network inet dgram,
  network inet6 stream,
  network inet6 dgram,

  # Tillåt qBittorrent att läsa delade bibliotek (läs‐endast)
  /lib/** mr,
  /usr/lib/** mr,
  /usr/lib/x86_64-linux-gnu/** mr,

  # TLS‐certifikat (om du använder krypterad tracker)
  /etc/ssl/certs/** r,

  # qBittorrent‐inställningar och cache (skriv/läs)
  owner @{HOME}/.config/qBittorrent/** rwk,
  owner @{HOME}/.cache/qBittorrent/** rwk,

  # Läs alla .torrent‐filer i hemkatalogen
  owner @{HOME}/**.torrent r,

  # Tillåt att traversera hemkatalogens mappar (men ej dolda filer)
  owner @{HOME}/ r,
  owner @{HOME}/**/ r,
  deny @{HOME}/**/.* r,

  # Huvud‐nedladdningsmapp (ändra om du har en annan sökväg)
  owner @{HOME}/Downloads/** rw,

  # Temporära torrentfiler
  owner /tmp/*.torrent rw,
  owner /tmp/qBittorrent/** rwk,

  # Tillgång till /proc för intern status
  owner @{PROC}/@{pids}/cmdline r,
  owner @{PROC}/@{pids}/fd/** r,
  owner @{PROC}/@{pids}/mountinfo r,
  owner @{PROC}/@{pids}/mounts r,

  # Terminal‐åtkomst (tty)
  /dev/tty[0-9]* rw,

  # Blockera absolut allt annat
  deny /** x,
}


